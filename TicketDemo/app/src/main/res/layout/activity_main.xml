<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/ic_launcher_background"
              tools:context="com.test.ticketdemo.MainActivity">

    <com.lilincpp.ticketview.support.view.SimpleTicketView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary">

        <com.lilincpp.ticketview.support.view.SimpleTicketDividingLine
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:line_drawWeight="0.7"
            app:line_gravity="vertical"
            />

        <com.lilincpp.ticketview.support.view.SimpleTicketDividingLine
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:line_drawWeight="0.2"
            app:line_gravity="vertical"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HELLO"/>

            <TextView
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="HELLO"/>
        </RelativeLayout>

    </com.lilincpp.ticketview.support.view.SimpleTicketView>


    <LinearLayout
        android:layout_margin="16dp"
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:layout_height="200dp">


    </LinearLayout>

</LinearLayout>
