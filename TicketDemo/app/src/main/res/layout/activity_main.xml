<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#e9e9e9"
              tools:context="com.test.ticketdemo.MainActivity">

    <com.lilincpp.ticketview.support.view.SimpleTicketView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:boundary_show="left|right|top"
        android:background="#fff"
        app:boundary_topDrawWeight="0.7"
        app:boundary_bottomDrawWeight="0.7"
        app:boundary_topRadius="20dp"
        app:boundary_bottomRadius="20dp"
        app:boundary_topItemQuantity="2"
        app:boundary_bottomItemQuantity="1"
        app:boundary_leftItemSpace="12dp"
        app:boundary_rightItemSpace="12dp"
        >


        <com.lilincpp.ticketview.support.view.SimpleTicketDividingLine
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:line_drawWeight="0.7"
            app:line_color="#E9E9E9"
            app:line_gravity="vertical"
            app:line_paddingTop="20dp"
            />

        <com.lilincpp.ticketview.support.view.SimpleTicketDividingLine
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:line_drawWeight="0.84"
            app:line_color="#E9E9E9"
            app:line_gravity="vertical"
            app:line_paddingTop="20dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HELLO WORLD"/>

            <TextView
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="HELLO"/>
        </RelativeLayout>

    </com.lilincpp.ticketview.support.view.SimpleTicketView>


    <LinearLayout
        android:layout_margin="16dp"
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:layout_height="100dp">

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:elevation="8dp"
        android:layout_height="100dp"/>

</LinearLayout>
